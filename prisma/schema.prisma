// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Employee {
  id           Int           @id @default(autoincrement())
  name         String
  last_name    String
  picture      String
  experience   Experience?
  skill        Skill?        @relation(fields: [skillId], references: [id])
  wish         Wish?
  education    Education[]
  intrests     Intrests?
  company_info Company_info?
  skillId      Int?
  ContactInfo  ContactInfo[]
}

model ContactInfo {
  id         Int      @id @default(autoincrement())
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId Int
  email      String
  phone      String
  address    String
}

model Experience {
  id         Int        @id @default(autoincrement())
  employee   Employee   @relation(fields: [employeeId], references: [id])
  employeeId Int
  industry   Industry[]
  network    String
  clients    Clients[]
}

model Clients {
  id         Int          @id @default(autoincrement())
  name       String
  experience Experience[]
  wish       Wish[]
}

model Industry {
  id         Int          @id @default(autoincrement())
  name       String
  experience Experience[]
  wish       Wish[]
}

model Wish {
  id                Int        @id @default(autoincrement())
  project           Skill[]
  industry          Industry[]
  clients           Clients[]
  further_education String
  employee          Employee   @relation(fields: [employeeId], references: [id])
  employeeId        Int
}

model Skill {
  id           Int        @id @default(autoincrement())
  software     String
  languages    String
  professional String
  softskill    String
  employee     Employee[]
  Wish         Wish?      @relation(fields: [wishId], references: [id])
  wishId       Int?
}

model Education {
  id       Int        @id @default(autoincrement())
  degree   String
  employee Employee[]
}

model Intrests {
  id             Int      @id @default(autoincrement())
  hobbies        String
  special_skills String
  employee       Employee @relation(fields: [employeeId], references: [id])
  employeeId     Int
}

model Company_info {
  id         Int      @id @default(autoincrement())
  location   String
  department String
  position   String
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId Int
}
